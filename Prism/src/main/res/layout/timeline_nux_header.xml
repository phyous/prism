<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/nux_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/card_border"
        >
    <com.phyous.prism.widget.TypefacedTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/nux_title"
            android:textSize="26sp"
            android:paddingBottom="5dp"
            app:typeface="fonts/Roboto-Bold.ttf"
            />

    <com.phyous.prism.widget.TypefacedTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/nux_description"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            app:typeface="fonts/Roboto-Light.ttf"
            />

    <com.phyous.prism.widget.TypefacedTextView
            android:id="@+id/cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:text="Click '+' get started"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            app:typeface="fonts/Roboto-Light.ttf"
            />

</LinearLayout>